<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D2323"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".land">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <Button
            android:layout_width="50dp"
            android:layout_height="50sp"
            android:id="@+id/back"
            android:background="@drawable/ic_back_unclicked"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Type of land affected ?"
            android:fontFamily="@font/psb"
            android:textSize="20sp"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="40dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            >

            <ImageView
                android:id="@+id/cultivated"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/ic_cultivated" />

            <ImageView
                android:id="@+id/barren"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/ic_barren_land" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingBottom="40dp"
            >
            <TextView
                android:layout_marginRight="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="@font/psr"
                android:layout_height="wrap_content"
                android:text="CULTIVATED"
                android:gravity="center_horizontal" />
            <TextView
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="@font/psr"
                android:layout_height="wrap_content"
                android:text="BARREN"
                android:gravity="center_horizontal" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingEnd="40dp"
        android:paddingRight="40dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DON'T  KNOW"
            android:id="@+id/submit_button"
            />
    </LinearLayout>

</LinearLayout>