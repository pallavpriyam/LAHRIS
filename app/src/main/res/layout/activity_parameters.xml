<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    android:gravity="center"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context=".Parameters">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Submissions"
        android:paddingBottom="60dp"
        android:textSize="25sp"
        android:fontFamily="@font/osb"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What type of landslide was it ?"
            android:textAlignment="center"
            android:fontFamily="@font/psb"
            android:textSize="20sp"
            android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                 android:id="@+id/type"
                android:fontFamily="@font/psr"
                android:layout_height="wrap_content"
                android:text="NOT SELECTED"
                />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What type of movement was it ?"
                android:textAlignment="center"
                android:fontFamily="@font/psb"
                android:textSize="20sp"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:id="@+id/movement"
                android:fontFamily="@font/psr"
                android:layout_height="wrap_content"
                android:text="NOT SELECTED"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transport affected was ?"
                android:textAlignment="center"
                android:fontFamily="@font/psb"
                android:textSize="20sp"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:id="@+id/transport"
                android:fontFamily="@font/psr"
                android:layout_height="wrap_content"
                android:text="NOT SELECTED"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Land affected was ?"
                android:textAlignment="center"
                android:fontFamily="@font/psb"
                android:textSize="20sp"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:id="@+id/land"
                android:fontFamily="@font/psr"
                android:layout_height="wrap_content"
                android:text="NOT SELECTED"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:id="@+id/submit_button" />
        </LinearLayout>

    </TableLayout>
    </ScrollView>



</LinearLayout>